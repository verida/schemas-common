{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://common.schemas.example.com/social/calendar/v0.1.0/schema.json",
    "title": "Calendar",
    "titlePlural": "Calendars",
    "description": "Calendar information",
    "type": "object",
    "appearance": {
        "style": {
            "color": "#42A5F5",
            "icon": "./calendar-icon.svg"
        }
    },
    "database": {
        "name": "calendar_data",
        "indexes": {
            "name": [
                "name"
            ],
            "insertedAt": [
                "insertedAt"
            ],
            "source": [
                "sourceApplication",
                "sourceId"
            ]
        }
    },
    "layouts": {
        "create": [
            "name",
            "timezone",
            "location"
        ],
        "view": [            
            "name",
            "description",
            "location",
            "insertedAt"
        ]
    },
    "allOf": [
        {
            "$ref": "https://core.schemas.verida.io/base/v0.1.0/schema.json"
        },
        {
            "properties": {                
                "description": {
                    "title": "Description",
                    "description": "Description of the calendar",
                    "type": "string"
                },
                "timezone": {
                    "type": "string",
                    "description": "UTC offset format",
                    "pattern": "^([+-](?:2[0-3]|[01][0-9]):[0-5][0-9])$",
                    "example": "+02:30"                        
                },
                "location": {
                    "title": "Location",
                    "description": "Geographic location of the calendar as free-form text.",
                    "type": "string"
                }
            },
            "required": [
                "timezone"
            ]
        }
    ]
}